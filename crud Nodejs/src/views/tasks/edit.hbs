<div class="block mx-auto my-12 p-8 bg red w-1/3 border-gray-200 rounded-lg shadow-lg">
    <h1 class="text-center text-3xl font-bold">Editar tarea</h1>

    {{#each tasks}}
    <form action="" method="post" class="mt-4">
        <input type="text"
            class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white"
            placeholder="Titulo de la tarea" name="title" value="{{title}}">

        <textarea
            class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white h-40"
            placeholder="Descripcion de la tarea" name="description">{{description}}</textarea>

        <button type="submit"
            class="rounded-md bg-red-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-purple-600 focus:bg-red-700">Enviar</button>
    </form>
    {{/each}}
</div>